<div class="top-page">
  <div class="wrapper top-box">
    <h1><span>むだゼロ</span><br>muda0</h1>
  </div>
</div>

<div class="devise-box">
<h2><%= t('.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-box" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "pass-box" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "pass-box" %>
    </div>

    <div class="actions">
      <%= f.submit t('.sign_up'),class: "signup-btn" %>
    </div>
  <% end %>

  <%= link_to(new_user_session_path) do %>
      <button class="login-button">ログイン</button>
  <% end %>

  <%# <%= render "devise/shared/links" %>

</div>
