<div class="devise-box">
  <h2><%= t('.forgot_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-box" %>
    </div>

    <div class="actions">
      <%= f.submit t('.send_me_reset_password_instructions'), class: "pass-submit" %>
    </div>
  <% end %>

   <%= link_to(new_user_registration_path) do %>
    <button class="signup-btn">アカウント登録</button>
  <% end %>
  <%= link_to(new_user_session_path) do %>
      <button class="login-button">ログイン</button>
  <% end %>

  <%# <%= render "devise/shared/links" %>
</div>
